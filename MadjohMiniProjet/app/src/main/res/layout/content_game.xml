<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.miniprojet.dominique.madjohminiprojet.GameActivity"
    tools:showIn="@layout/activity_game">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/scoreTextGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            android:text="@string/score_game_main"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/score_size_game"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textAfficheeGame"
            android:layout_below="@+id/scoreTextGame"
            android:text="@string/mot_game_main"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/score_size_game"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textAfficheeGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reponseGame"
            android:layout_alignStart="@+id/reponseGame"
            android:layout_below="@+id/scoreTextGame"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:text="---------------"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/score_size_game"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/reponseGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textAfficheeGame"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:ems="7"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/score_size_game" />

        <Button
            android:id="@+id/buttonValiderGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reponseGame"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="#A50008"
            android:onClick="validerClick"
            android:padding="10dp"
            android:text="@string/confirm_game_main"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonRecommencerGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reponseGame"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="#A50008"
            android:padding="10dp"
            android:text="@string/recommencer_game_main"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

    </RelativeLayout>
</ScrollView>